@model Games

@*
p = padding
pb = padding bottom
m = margin
mt = margin top
*@

<form asp-controller="Home" asp-action="Edit" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Movie</h2>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Platform"></label>
			<input asp-for="Platform" class="form-control" />
			<span asp-validation-for="Platform" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Genre"></label>
			<input asp-for="Genre" class="form-control" />
			<span asp-validation-for="Genre" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ESRB"></label>
			<input asp-for="ESRB" class="form-control" />
			<span asp-validation-for="ESRB" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Year"></label>
			<input asp-for="Year" class="form-control" />
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Image">Image (URL)</label>
			<input asp-for="Image" class="form-control" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-controller="Home" asp-action="Library" class="btn btn-secondary">Library</a>
	</div>

</form>